generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Drop {
  id          String   @id @default(cuid())   // auto-generate ID
  storeId     String
  title       String
  description String
  price       String
  imageUrl    String?
  productUrl  String
  createdAt   DateTime  @default(now())
  Store       Store     @relation(fields: [storeId], references: [id])
}

model Store {
  id           String          @id @default(cuid())
  slug         String         @unique
  name         String
  ownerId      String
  description String?
  imageUrl     String?
  tags        String[]
  createdAt    DateTime       @default(now())
  Drop         Drop[]
  User         User           @relation(fields: [ownerId], references: [id])
  Subscription Subscription[]
}

model Subscription {
  id             String   @id @default(cuid())
  storeId        String   
  platform       String
  externalUserId String
  username       String?
  createdAt      DateTime @default(now())
  Store          Store    @relation(fields: [storeId], references: [id])

  @@unique([storeId, platform, externalUserId])
}

model User {
  id        String   @id
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  Store     Store[]
}
